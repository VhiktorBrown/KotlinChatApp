<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_5sdp">

        <TextView
            android:id="@+id/buzz_out_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/message_out"
            android:maxWidth="@dimen/_220sdp"
            android:text="I am just typing random shii because I dont know what else to type"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:fontFamily="@font/muli"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/buzz_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buzz_out_message"
            android:text="23 Mar 2022, 08:41"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/muli"
            android:textColor="@color/message_in"
            android:layout_marginEnd="@dimen/_5sdp"
            android:drawablePadding="@dimen/_5sdp"
            app:drawableEndCompat="@drawable/ic_done" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>